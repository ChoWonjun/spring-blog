<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 2.1//EN"
       "http://tiles.apache.org/dtds/tiles-config_2_1.dtd">
<tiles-definitions>
	
	<definition name="home" extends="default">
		<put-attribute name="navigation" value="/WEB-INF/views/templates/navigation.jsp"/>
		<put-attribute name="pageHeader" value="/WEB-INF/views/templates/page_header.jsp"/>
		<put-attribute name="mainContent" value="/WEB-INF/views/home.jsp"/>
		<put-attribute name="footer" value="/WEB-INF/views/templates/footer.jsp"/>
	</definition>
	
	<definition name="post_default/*" extends="default">
		<put-attribute name="mainContent" value="/WEB-INF/views/post/{1}.jsp" />
	</definition>
	<definition name="post_default/*/*" extends="default">
		<put-attribute name="mainContent" value="/WEB-INF/views/post/{1}/{2}.jsp" />
	</definition>
	<definition name="post_wide/*" extends="wide">
		<put-attribute name="mainContent" value="/WEB-INF/views/post/{1}.jsp" />
	</definition>
	<definition name="post_wide/*/*" extends="wide">
		<put-attribute name="mainContent" value="/WEB-INF/views/post/{1}/{2}.jsp" />
	</definition>

</tiles-definitions>